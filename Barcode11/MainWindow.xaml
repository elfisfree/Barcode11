<Window x:Class="Barcode11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Barcode11"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Background="White">
            <StackPanel.Resources>
                <Style x:Key="ButtonStyle" TargetType="Button">
                    <Setter Property="Background" Value="#FF94DAFF"/>
                    <Setter Property="Margin" Value="0,0,0,20"/>
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="Width" Value="133"/>
                    <Setter Property="Height" Value="35"/>
                </Style>
            </StackPanel.Resources>

            <ComboBox x:Name="cmbProducts" Width="300"
            DisplayMemberPath="nameProd" SelectedValuePath="barcodeNumber" SelectionChanged="CmbProducts_SelectionChanged"/>

            <TextBox x:Name="txtBox" HorizontalAlignment="Center" Background="LightCyan" TextWrapping="Wrap" 
                     VerticalAlignment="Top" Width="300" HorizontalContentAlignment="Center" 
                     VerticalContentAlignment="Center" Height="40" Margin="0,10,0,20" FontFamily="Times New Roman" FontSize="20" 
                     FontWeight="Medium" SpellCheck.IsEnabled="True" MaxLength="12" TextChanged="TxtBox_TextChanged"/>

            <Button x:Name="btnGenerate" Content="Сгенерировать код" FontFamily="Times New Roman" FontSize="14" Style="{StaticResource ButtonStyle}" Click="BtnGenerate_Click" Width="230"/>
            <Border x:Name="barcodeBorder" Height="270" Width="600" BorderBrush="LightBlue" BorderThickness="1" Visibility="Collapsed">
                <Canvas x:Name="barcodeCan" Height="270" Width="250" Background="White"/>
            </Border>
        </StackPanel>
    </Grid>
</Window>
